# Alpha Vantage API Key (get from: https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Binance API (get from: https://binance.com -> Account -> API Management)
# Note: These are optional for crypto data, not required for initial setup
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Database configuration
DATABASE_URL=sqlite:///./data/quantflow.db

# Risk management settings
MAX_POSITION_SIZE=0.1  # 10% max position size
MAX_DAILY_LOSS=0.05    # 5% max daily loss
MAX_DRAWDOWN=0.15      # 15% max drawdown

# Trading settings
PAPER_TRADING=true
INITIAL_CAPITAL=100000  # $100,000 initial capital for paper trading
